<Window x:Class="SIL_XBET_USER.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIL_XBET_USER"
        mc:Ignorable="d"
              Title="Авторизация" Height="300" Width="400" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel>
            <Label Content="Авторизация" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="0,41,0,5" FontFamily="Bahnschrift SemiBold" FontSize="18" Foreground="#FF49ABB2" />
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFCFFCED" >
                <Label Content="Логин" Width="150" FontFamily="Bahnschrift SemiBold" FontSize="14" Foreground="#FF40D600" />
                <TextBox x:Name="LoginBox" Margin="5"  Background="#FF49ABB2"/>
                <Label Content="Пароль" FontFamily="Bahnschrift SemiBold" FontSize="14" Foreground="#FF40D600"  />
                <PasswordBox x:Name="PasswordBox" Margin="5"  Background="#FF49ABB2" />
                <Button Content="Вход" Click="ButtonLog" Margin="5" FontFamily="Bahnschrift SemiBold" FontSize="14" Foreground="#FF40D600" Background="#FF49ABB2" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
